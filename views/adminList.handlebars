<div class = "back">

<h2 class="adminaddcolor">Product Dashboard</h2>
 
 <section class="tasks-container">
   



    <table border="1" style="text-align: center;">
        <thead>
                <th> Title </th>
                <th> Description </th>
                <th> Image </th>
                <th> Category </th>
                <th> Price </th>
                <th> Bestseller </th>
                <th> Quantity </th>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                   <td>
                        <a href="" class="task-title">{{this.title}}</a>
                   </td>
                   <td>
                       <span>{{this.description}}</span>
                      
                   </td>
                   <td>
                        <span>{{this.image}}</span>
                   </td>
                   <td>
                       <span>{{this.category}}</span>
                   </td>
                   <td>
                       <span>{{this.price}}</span>
                   </td>
                   <td>
                       <span>{{this.bestseller}}</span>
                   </td>
                   <td>
                       <span>{{this.quantity}}</span>
                   </td>
                   <td>
                        <a href="/admin/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                        <a href="/admin/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                   </td> 
                </tr>

                {{else}}
                    <td colspan="5">
                        <p>No products in the database</p>
                    </td>

                {{/each}}
    </tbody>
    </table>
 
</section>
<br>
<div id="tasks-links-holder"> 
    <a href="/admin/add">Add a Product</a>
</div>
</div>
