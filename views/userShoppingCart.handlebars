
<div class = "back">
<div class="signup3">
<h1 class = "dash">User Shopping Cart<br><br> {{user.name}}</h1><br>

{{#each orders}}
<div class = "productDesDiv">
    <img class = "productImage" src = "/uploads/{{this.image}}"/>

    <div class = "productDes">
        <p class = "productDes_name">{{this.title}}</p>
        <br>
        <p>CAD ${{this.price}}</p>
        <br>
        <p>{{this.description}}</p>
        <br>
        <p>Quantity:{{this.quantity}}</p>
        <br>
        {{#if this.available }}
        <p>In Stock</p>
        {{else}}
        <p>Out of Stock</p>
        {{/if}}
        <br>
        <a href="/products/productDes/{{this.id}}">See details</a>
        <br><br>
    </div>
</div>
{{/each}}

        {{#each errors}}
            <div class="productDes_message">{{this}}</div>
        {{/each}}

  <div class = "shopCartPad">     
<form method="POST" action="shoppingCart">
        <label class= "orderTotal">Order Total: CAD ${{totalPrice}}</label> <br>
        <input type="hidden" name="totalPrice" id="totalPrice" value="{{totalPrice}}">
        <br>
        <input class = "orderNow" type="submit" value="Place Order Now">
</form> <br>
</div> 
</div>
</div>

